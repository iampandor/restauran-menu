<p id="notice"><%= notice %></p>

<h1>Ingredient X Dishes</h1>

<table>
  <thead>
    <tr>
      <th>Ingredient</th>
      <th>Dish</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredient_x_dishes.each do |ingredient_x_dish| %>
      <tr>
        <td><%= ingredient_x_dish.ingredient_id %></td>
        <td><%= ingredient_x_dish.dish_id %></td>
        <td><%= ingredient_x_dish.weight %></td>
        <td><%= link_to 'Show', ingredient_x_dish %></td>
        <td><%= link_to 'Edit', edit_ingredient_x_dish_path(ingredient_x_dish) %></td>
        <td><%= link_to 'Destroy', ingredient_x_dish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

